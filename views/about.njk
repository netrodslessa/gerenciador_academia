{% extends "layout.njk" %}

{% block head %}

    <title>Sobre - {{about.name}}</title>

{% endblock %}
    
{% block content %}

    <div id="wrapper">
        <img src="{{about.avatar_url}}" alt="imagem de {{about.name}}">
        <h1>{{about.name}}</h1>
        <h2>{{about.role}}</h2>
        <p>{{about.description}}</p>
    </div>
    <footer>
        <div class="links" id="links-footer">
            <!-- div Ã© uma caixa -->
            <!-- usa-se o http ou https para sair do documento(servidor) -->
            {% for link in about.links %}

                <a href="{{link.URL}}" target="_blank">{{link.name}}</a>
            {% endfor %}
        </div>
    </footer>

{% endblock %}